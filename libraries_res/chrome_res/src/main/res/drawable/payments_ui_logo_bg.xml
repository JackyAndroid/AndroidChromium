<!-- Encapsulates the content with a rounded white rectangle. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" />

    <stroke
        android:width="1dp"
        android:color="#e0e0e0" />

    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />

    <corners android:radius="1dp" />
</shape>
