<!-- This file is necessary because the design support library (as of 24.0) doesn't have properly
     styled progress bars on JB & KK. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/material_progressbar_bg" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/light_active_color" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/google_grey_600" />
            </shape>
        </clip>
    </item>
</layer-list>
